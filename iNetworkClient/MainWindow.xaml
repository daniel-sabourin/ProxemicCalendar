<Window x:Class="iNetworkClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="http://schemas.microsoft.com/surface/2008"
        xmlns:Controls="clr-namespace:iNetworkClient"
        
        Title="Proxemic Display" Height="350" Width="525" WindowState="Maximized" WindowStyle="None" KeyUp="Window_KeyUp" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <MediaElement Name="mediaElement" Stretch="Fill"></MediaElement>
        <Controls:SkeletonVisualizer x:Name="SkeletonViz"></Controls:SkeletonVisualizer>
        <s:ScatterView x:Name="MainScatterView"></s:ScatterView>

        <Button Width="72" Height="30" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Button_Click"></Button>
        <Button Width="72" Height="30" Content="Medium" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Button_Click"></Button>
        <Button Width="72" Height="30" Content="Far" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click"></Button>
        
    </Grid>
</Window>
