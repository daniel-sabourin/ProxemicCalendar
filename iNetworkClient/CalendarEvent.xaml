<UserControl x:Class="iNetworkClient.CalendarEvent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid Background="Transparent">
        
        <Ellipse StrokeThickness="1" Stroke="Black">
            <Ellipse.Fill>
                <ImageBrush Stretch="UniformToFill" TileMode="None" x:Name="imageBrush" ImageSource="/iNetwork%20WPF%20Client1;component/Resources/Koala.jpg" />
            </Ellipse.Fill>
        </Ellipse>
        
        <Ellipse Fill="Black" Opacity="0" Name="blackBackgroundEllipse"></Ellipse>

            <Label x:Name="textLabel" FontSize="40" Content="Hello" HorizontalAlignment="Stretch" VerticalAlignment="Center" Foreground="White" FontFamily="Roboto" Margin="3,0" HorizontalContentAlignment="Center" Opacity="0">
                <Label.Effect>
                    <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.75" BlurRadius="5"/>
                </Label.Effect>
            </Label>

    </Grid>
</UserControl>
