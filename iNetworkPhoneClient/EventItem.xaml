<UserControl x:Class="iNetworkPhoneClient.EventItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Margin="0,10">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"></ColumnDefinition>
            <ColumnDefinition Width="75*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Image Source="/iNetwork%20Phone%20Client1;component/Resources/Background.png" HorizontalAlignment="Left" Name="eventImage"></Image>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
            <TextBlock Text="Event Name" Name="eventName"></TextBlock>
            <TextBlock Text="Date/Time" Name="eventTime"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
